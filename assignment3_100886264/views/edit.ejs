<div class="container">
    <h1>Edit Assignment</h1>
    <form action="/assignments/<%= assignment._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" id="title" name="title" class="form-control" value="<%= assignment.title %>" required>
        </div>

        <div class="form-group">
            <label for="subject">Subject</label>
            <input type="text" id="subject" name="subject" class="form-control" value="<%= assignment.subject %>" required>
        </div>

        <div class="form-group">
            <label for="dueDate">Due Date</label>
            <input type="date" id="dueDate" name="dueDate" class="form-control" value="<%= assignment.dueDate.toISOString().substring(0, 10) %>" required>
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description" class="form-control" required><%= assignment.description %></textarea>
        </div>

        <div class="form-group">
            <label for="status">Status</label>
            <select id="status" name="status" class="form-control">
                <option value="Pending" <%= assignment.status === 'Pending' ? 'selected' : '' %>>Pending</option>
                <option value="Completed" <%= assignment.status === 'Completed' ? 'selected' : '' %>>Completed</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Update Assignment</button>
    </form>
</div>